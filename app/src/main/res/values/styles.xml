<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:actionBarStyle">@style/actionbar_style</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/green_light</item>
    </style>
    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider</item>
        <item name="android:background">@color/gray</item>
    </style>
    <style name="divider_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/divider</item>
        <item name="android:background">@color/gray</item>
    </style>
    <style name="divider_large">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_lager</item>
        <item name="android:background">@color/gray_middle</item>
    </style>
    <style name="divider_vertical">
        <item name="android:layout_width">@dimen/divider</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/gray</item>
    </style>
    <style name="divider_vertical_red">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@color/orange</item>
    </style>
    <style name="divider_vertical_red_match">
        <item name="android:layout_width">1.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/orange</item>
    </style>
    <style name="divider_red">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/red</item>
    </style>
    <style name="divider_vertical_bigger">
        <item name="android:layout_width">@dimen/divider_lager</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/gray_middle</item>
    </style>
    <style name="divider_vertical_larger">
        <item name="android:layout_width">@dimen/divider_lager</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@color/gray_middle</item>
    </style>
    <style name="text_small">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_nor">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="text_nor_gray">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="text_nor_bottom_gray">
        <item name="android:textColor">@color/gray_text_nor</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="text_nor_blue">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="text_nor_bottom_yellow">
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="text_big">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text_large">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTabText</item>
        <item name="tabSelectedTextColor">@color/green</item>
    </style>

    <style name="MyCustomTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="ServiceDemandTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/ServiceDemandTabText</item>
        <item name="tabSelectedTextColor">@color/colorPrimaryDark</item>
    </style>

    <style name="ServiceDemandTabText" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>



    <style name="actionbar_style" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">#218FCC</item>
        <item name="android:actionBarSize">150dip</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:itemPadding">20dip</item>

    </style>


    <style name="CustomCheckboxTheme" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/checkbox_style</item>
    </style>
</resources>
