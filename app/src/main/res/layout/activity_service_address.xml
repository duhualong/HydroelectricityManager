<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    android:orientation="vertical">
<include layout="@layout/activity_service_address_title"/>
<LinearLayout
    android:id="@id/noAddress"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/drawable_top_distance"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_no_address_tip"/>
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:padding="@dimen/text_padding"
    style="@style/text_nor"
    android:text="@string/no_always_use_address"/>
</LinearLayout>
</LinearLayout>