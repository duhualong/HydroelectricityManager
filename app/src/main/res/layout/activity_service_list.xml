<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@drawable/color_gradient_theme">
        <ImageView
            android:id="@id/backLeftWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_arrow_left_white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/service_list"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            style="@style/text_big"
            android:layout_toEndOf="@id/backLeftWhite"
            android:layout_toRightOf="@id/backLeftWhite"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:text="@string/filter"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:layout_marginRight="@dimen/right_distance"
            android:layout_marginEnd="@dimen/right_distance"
            style="@style/text_big"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_line_layout"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:id="@id/project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/project"
                style="@style/text_nor"
                android:textColor="@color/red"
                android:layout_centerInParent="true"/>
            <View
                android:id="@id/projectListService"
               style="@style/divider_red"
                android:layout_alignParentBottom="true"/>


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <TextView
                android:id="@id/staff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/staff_name"
                style="@style/text_nor"
                android:layout_centerInParent="true"/>
            <View
                android:id="@id/staffListService"
                style="@style/divider_red"
                android:visibility="invisible"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@id/vPagerListService"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>