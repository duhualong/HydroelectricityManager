<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/small_top_distance"
    android:background="@color/gray_light"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@id/myReservation"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/my_content_height">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/padding_drawable"
            android:text="@string/my_reservation"
            style="@style/text_nor"
            android:layout_marginStart="@dimen/middle_left_distance"
            android:layout_marginLeft="@dimen/middle_left_distance"
            android:drawableStart="@drawable/ic_my_reservation"
            android:drawableLeft="@drawable/ic_my_reservation"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_black_right"
            android:layout_marginEnd="@dimen/right_distance"
            android:layout_marginRight="@dimen/right_distance"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>
    <View style="@style/divider"/>

    <RelativeLayout
        android:id="@id/myService"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/my_content_height">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/padding_drawable"
            android:text="@string/my_service"
            style="@style/text_nor"
            android:layout_marginStart="@dimen/middle_left_distance"
            android:layout_marginLeft="@dimen/middle_left_distance"
            android:drawableStart="@drawable/ic_my_service"
            android:drawableLeft="@drawable/ic_my_service"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_black_right"
            android:layout_marginEnd="@dimen/right_distance"
            android:layout_marginRight="@dimen/right_distance"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View style="@style/divider"/>
    <RelativeLayout
        android:id="@id/lifeService"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/my_content_height">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/padding_drawable"
            android:text="@string/life_service"
            style="@style/text_nor"
            android:layout_marginStart="@dimen/middle_left_distance"
            android:layout_marginLeft="@dimen/middle_left_distance"
            android:drawableStart="@drawable/ic_life_service"
            android:drawableLeft="@drawable/ic_life_service"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_black_right"
            android:layout_marginEnd="@dimen/right_distance"
            android:layout_marginRight="@dimen/right_distance"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View style="@style/divider"/>
    <RelativeLayout
        android:id="@id/myReservation"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/my_content_height">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/padding_drawable"
            android:text="@string/address_manage"
            style="@style/text_nor"
            android:layout_marginStart="@dimen/middle_left_distance"
            android:layout_marginLeft="@dimen/middle_left_distance"
            android:drawableStart="@drawable/ic_address_manage"
            android:drawableLeft="@drawable/ic_address_manage"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_black_right"
            android:layout_marginEnd="@dimen/right_distance"
            android:layout_marginRight="@dimen/right_distance"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@id/customerHotLine"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginTop="@dimen/small_top_distance"
        android:layout_height="@dimen/my_content_height">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/padding_drawable"
            android:text="@string/customer_hot_line"
            style="@style/text_nor"
            android:layout_marginStart="@dimen/middle_left_distance"
            android:layout_marginLeft="@dimen/middle_left_distance"
            android:drawableStart="@drawable/ic_customer_hot_line"
            android:drawableLeft="@drawable/ic_customer_hot_line"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            style="@style/text_nor_bottom_yellow"
            android:layout_marginEnd="@dimen/right_distance_middle"
            android:layout_marginRight="@dimen/right_distance_middle"
            android:text="@string/hot_line_phone"/>
    </RelativeLayout>
</LinearLayout>