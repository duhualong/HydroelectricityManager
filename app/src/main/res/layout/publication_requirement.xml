<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light">
    <RelativeLayout
        android:id="@id/titleRequirement"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@drawable/color_gradient_theme">
        <ImageView
            android:id="@id/backLeftWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_arrow_left_white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/publication_requirement"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            style="@style/text_big"
            android:layout_toEndOf="@id/backLeftWhite"
            android:layout_toRightOf="@id/backLeftWhite"/>
    </RelativeLayout>
    <include
        layout="@layout/publication_requirement_content"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@color/white"
        android:layout_alignParentBottom="true">
        <TextView
            android:id="@id/pubRequirePrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_nor"
            android:layout_centerVertical="true"
            android:textColor="@color/red"
            android:layout_marginLeft="@dimen/left_distance"
            android:layout_marginStart="@dimen/left_distance"
            android:text="@string/requirement_price"/>
        <Button
            android:id="@id/immediatePay"
            android:layout_width="@dimen/button_width_large"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_height="@dimen/button_height"
            android:layout_marginEnd="@dimen/right_distance"
            android:background="@drawable/button_red"
            android:textColor="@color/white"
            style="@style/text_nor"
            android:layout_centerVertical="true"
            android:text="@string/immediate_pay"
            android:layout_marginRight="@dimen/right_distance"/>
    </RelativeLayout>

</RelativeLayout>