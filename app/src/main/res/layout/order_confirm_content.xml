<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_light"
    android:layout_below="@id/titleRequirement">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <RelativeLayout
        android:layout_marginTop="@dimen/middle_top_distance"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/liner_layout_height_large">
        <TextView
            android:id="@id/orderPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_distance"
            android:layout_marginStart="@dimen/left_distance"
            android:paddingTop="@dimen/padding_top"
            style="@style/text_nor"
            android:text="@string/tel"/>

        <View
            android:id="@id/itemLine"
            android:layout_below="@id/orderPhone"
            android:layout_marginTop="@dimen/padding_top"
            style="@style/divider"/>


        <TextView
            android:id="@id/reservationTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemLine"
            android:paddingTop="@dimen/text_padding"
            style="@style/text_nor_gray"
            android:gravity="bottom"
            android:layout_marginTop="@dimen/padding_top"
            android:drawableLeft="@drawable/ic_order_confirm_time"
            android:drawableStart="@drawable/ic_order_confirm_time"
            android:drawablePadding="@dimen/padding_drawable"
            android:layout_alignLeft="@id/orderPhone"
            android:layout_alignStart="@id/orderPhone"
            android:text="@string/my_reservation_time" />
        <TextView
            android:id="@id/selectedServiceTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/reservationTime"
            android:layout_toEndOf="@id/reservationTime"
            android:layout_centerVertical="true"
            android:text="@string/my_reservation_date"
            android:layout_alignBottom="@id/reservationTime"
            style="@style/text_nor_gray"/>
        <View
            android:id="@id/itemLines"
            android:layout_below="@id/reservationTime"
            android:layout_marginTop="@dimen/padding_top"
            style="@style/divider"/>
        <TextView
            android:id="@id/orderAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/itemLines"
            android:paddingTop="@dimen/text_padding"
            style="@style/text_nor_gray"
            android:gravity="bottom"
            android:layout_marginTop="@dimen/padding_top"
            android:drawableLeft="@drawable/ic_order_confirm_address"
            android:drawableStart="@drawable/ic_order_confirm_address"
            android:drawablePadding="@dimen/padding_drawable"
            android:layout_alignLeft="@id/orderPhone"
            android:layout_alignStart="@id/orderPhone"
            android:text="@string/order_service_address"
            />
        <TextView
            android:id="@id/selectedServiceAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/orderAddress"
            android:layout_toEndOf="@id/orderAddress"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="@string/my_reservation_date"
            android:layout_alignBottom="@id/orderAddress"
            style="@style/text_nor_gray"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="@dimen/middle_top_distance"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">
        <TextView
            android:id="@id/selectedProject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_distance"
            android:layout_marginStart="@dimen/left_distance"
            android:paddingTop="@dimen/padding_top"
            style="@style/text_nor"
            android:text="@string/select_maintain_project"/>
        <TextView
            android:id="@id/descriptionProblem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/selectedProject"
            android:paddingTop="@dimen/text_padding"
            style="@style/text_nor_gray"
            android:gravity="bottom"
            android:layout_marginTop="@dimen/padding_top"
            android:drawablePadding="@dimen/padding_drawable"
            android:layout_alignLeft="@id/selectedProject"
            android:layout_alignStart="@id/selectedProject"
            android:text="@string/my_reservation_description_problem" />

        <ImageView
            android:id="@id/imgUpload"
            android:layout_width="@dimen/drawable_size"
            android:layout_height="@dimen/drawable_size"
            android:layout_below="@id/descriptionProblem"
            android:paddingTop="@dimen/padding_top"
            android:layout_marginLeft="@dimen/left_distance"
            android:layout_marginStart="@dimen/left_distance"
            android:src="@drawable/upload_photo"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@id/rlCoupon"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/small_top_distance"
        android:background="@color/white"
        android:layout_height="@dimen/height_edit_text">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            style="@style/text_nor_gray"
            android:layout_marginLeft="@dimen/left_distance"
            android:layout_marginStart="@dimen/left_distance"
            android:text="@string/order_discount_coupon"/>
        <TextView
            android:id="@id/discountCouponAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/blackRightBack"
            android:layout_toLeftOf="@id/blackRightBack"
            android:text="@string/not_use"/>
        <ImageView
            android:id="@id/blackRightBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_black_right"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        style="@style/divider"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/height_edit_text">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            style="@style/text_nor_gray"
            android:layout_marginLeft="@dimen/left_distance"
            android:layout_marginStart="@dimen/left_distance"
            android:text="@string/actually_pay_account"/>
        <TextView
            android:id="@id/orderActualPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/red"
            android:layout_toStartOf="@id/backBlackRight"
            android:layout_toLeftOf="@id/backBlackRight"
            android:text="@string/requirement_price"/>
        <ImageView
            android:id="@id/backBlackRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_black_right"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="@dimen/left_distance"
       android:layout_marginStart="@dimen/left_distance"
       style="@style/text_nor"
       android:paddingTop="@dimen/small_top_distance"
       android:paddingBottom="@dimen/small_top_distance"
       android:text="@string/payment_method"/>
    <RelativeLayout
        android:id="@id/aliPayRl"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/height_edit_text">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            style="@style/text_nor_gray"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_ali_pay_payment"
            android:drawableStart="@drawable/ic_ali_pay_payment"
            android:drawablePadding="@dimen/padding_drawable"
            android:layout_marginLeft="@dimen/left_distance"
            android:layout_marginStart="@dimen/left_distance"
            android:text="@string/ali_pay_payment"/>

        <CheckBox
            android:id="@id/aliPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:checked="true"
            style="@style/CustomCheckboxTheme"
            android:layout_marginEnd="@dimen/right_distance"
            android:layout_marginRight="@dimen/right_distance"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
    <View
        style="@style/divider"/>
    <RelativeLayout
        android:id="@id/weChatRl"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/height_edit_text">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            style="@style/text_nor_gray"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_we_chat_payment"
            android:drawableStart="@drawable/ic_we_chat_payment"
            android:drawablePadding="@dimen/padding_drawable"
            android:layout_marginLeft="@dimen/left_distance"
            android:layout_marginStart="@dimen/left_distance"
            android:text="@string/we_chat_payment"/>
        <CheckBox
            android:id="@id/weChatPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            style="@style/CustomCheckboxTheme"
            android:layout_marginEnd="@dimen/right_distance"
            android:layout_marginRight="@dimen/right_distance"
            android:layout_alignParentRight="true"/>
        <!--<ImageView-->
            <!--android:id="@id/weChatPayment"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:src="@drawable/ic_default_selected"-->
            <!--android:layout_alignParentEnd="true"-->
            <!--android:layout_centerVertical="true"-->
            <!--android:layout_marginEnd="@dimen/right_distance"-->
            <!--android:layout_marginRight="@dimen/right_distance"-->
            <!--android:layout_alignParentRight="true"/>-->
    </RelativeLayout>
            <Button
                android:id="@id/orderPayment"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_margin="@dimen/margin_button_distance"
                android:text="@string/payment"
                android:textColor="@color/white"
                style="@style/text_nor"
                android:background="@drawable/button_orange" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>