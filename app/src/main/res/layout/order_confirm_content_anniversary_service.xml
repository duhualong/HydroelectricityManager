<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    android:layout_below="@id/titleRequirement">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@id/serviceAddress"
                android:layout_width="match_parent"
                android:background="@color/white"
                android:layout_marginTop="@dimen/small_top_distance"
                android:layout_height="@dimen/my_content_height">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_centerVertical="true"
                    android:drawablePadding="@dimen/padding_drawable"
                    android:text="@string/service_address"
                    style="@style/text_nor_gray"
                    android:layout_marginStart="@dimen/middle_left_distance"
                    android:layout_marginLeft="@dimen/middle_left_distance"
                    android:drawableStart="@drawable/ic_service_address"
                    android:drawableLeft="@drawable/ic_service_address"/>
                <ImageView
                    android:id="@id/backServiceAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_black_right"
                    android:layout_marginEnd="@dimen/right_distance"
                    android:layout_marginRight="@dimen/right_distance"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"/>
                <TextView

                    android:id="@id/selectedServiceAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@id/backServiceAddress"
                    android:layout_toStartOf="@id/backServiceAddress"
                    android:layout_centerVertical="true"
                    android:text="@string/hint_select_address"
                    style="@style/text_nor_gray"/>

            </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/small_top_distance"
        android:background="@color/white"
        android:layout_height="@dimen/height_edit_text">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            style="@style/text_nor_gray"
            android:layout_marginLeft="@dimen/left_distance"
            android:layout_marginStart="@dimen/left_distance"
            android:text="@string/order_discount_coupon"/>
        <TextView
            android:id="@id/discountCouponAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/blackRightBack"
            android:layout_toLeftOf="@id/blackRightBack"
            android:text="@string/not_use"/>
        <ImageView
            android:id="@id/blackRightBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_black_right"
            android:layout_marginEnd="@dimen/right_distance"
            android:layout_marginRight="@dimen/right_distance"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        style="@style/divider"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/height_edit_text">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            style="@style/text_nor_gray"
            android:layout_marginLeft="@dimen/left_distance"
            android:layout_marginStart="@dimen/left_distance"
            android:text="@string/actually_pay_account"/>
        <TextView
            android:id="@id/orderActualPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textColor="@color/red"
            android:layout_toStartOf="@id/backBlackRight"
            android:layout_toLeftOf="@id/backBlackRight"
            android:text="@string/requirement_price"/>
        <ImageView
            android:id="@id/backBlackRight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_black_right"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginLeft="@dimen/left_distance"
       android:layout_marginStart="@dimen/left_distance"
       style="@style/text_nor"
       android:paddingTop="@dimen/small_top_distance"
       android:paddingBottom="@dimen/small_top_distance"
       android:text="@string/payment_method"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/height_edit_text">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            style="@style/text_nor_gray"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_ali_pay_payment"
            android:drawableStart="@drawable/ic_ali_pay_payment"
            android:drawablePadding="@dimen/padding_drawable"
            android:layout_marginLeft="@dimen/left_distance"
            android:layout_marginStart="@dimen/left_distance"
            android:text="@string/ali_pay_payment"/>

        <ImageView
            android:id="@id/aliPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_selected_payment"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/right_distance"
            android:layout_marginRight="@dimen/right_distance"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <View
        style="@style/divider"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/height_edit_text">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            style="@style/text_nor_gray"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_we_chat_payment"
            android:drawableStart="@drawable/ic_we_chat_payment"
            android:drawablePadding="@dimen/padding_drawable"
            android:layout_marginLeft="@dimen/left_distance"
            android:layout_marginStart="@dimen/left_distance"
            android:text="@string/we_chat_payment"/>

        <ImageView
            android:id="@id/weChatPayment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_default_selected"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/right_distance"
            android:layout_marginRight="@dimen/right_distance"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

        </LinearLayout>

    <Button
        android:id="@id/orderPayment"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_margin="@dimen/margin_button_distance"
        android:text="@string/payment"
        android:textColor="@color/white"
        style="@style/text_nor"
        android:background="@drawable/button_orange" />
</RelativeLayout>