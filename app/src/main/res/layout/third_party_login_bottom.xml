<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal"
    android:visibility="gone"
    android:background="@drawable/ic_third_party_login_background"
    >
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:gravity="end"
        android:orientation="vertical">
        <ImageView
            android:id="@id/ivWeChat"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:paddingEnd="30dp"
            android:paddingRight="30dp"
            android:paddingLeft="30dp"
            android:paddingStart="30dp"
            android:paddingTop="25dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_we_chat"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/we_chat"
            style="@style/text_nor"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp"
            android:layout_below="@id/ivWeChat"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:id="@id/ivQQ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingEnd="30dp"
            android:paddingRight="30dp"
            android:paddingLeft="40dp"
            android:paddingStart="40dp"
            android:paddingTop="25dp"
            android:src="@drawable/ic_qq"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/qq"
            style="@style/text_nor"
            android:layout_marginLeft="50dp"
            android:layout_marginStart="50dp"
            android:layout_below="@id/ivQQ"/>

    </RelativeLayout>

</LinearLayout>