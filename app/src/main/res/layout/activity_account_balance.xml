<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_middle"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@drawable/color_gradient_theme">
        <ImageView
            android:id="@id/backLeftWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_arrow_left_white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_balance"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            style="@style/text_big"
            android:layout_toEndOf="@id/backLeftWhite"
            android:layout_toRightOf="@id/backLeftWhite"/>
    </RelativeLayout>
   <RelativeLayout
       android:layout_width="match_parent"
       android:background="@drawable/color_gradient_theme"
       android:layout_height="@dimen/banner_height">
       <TextView
           android:id="@id/accountName"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           style="@style/text_nor"
           android:layout_marginTop="@dimen/top_distance"
           android:textColor="@color/white"
           android:layout_marginStart="@dimen/left_distance"
           android:layout_marginLeft="@dimen/left_distance"
           android:text="@string/name"/>
       <TextView
           android:id="@id/accountPhone"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/accountName"
           android:text="@string/discount_coupon_phone"
           style="@style/text_nor"
           android:gravity="center"
           android:drawablePadding="@dimen/small_padding_drawable"
           android:textColor="@color/white"
           android:layout_marginTop="@dimen/padding_top"
           android:layout_marginStart="@dimen/left_distance"
           android:layout_marginLeft="@dimen/left_distance"
           android:drawableLeft="@drawable/ic_account_phone"
           android:drawableStart="@drawable/ic_account_phone"/>
       <TextView
           android:id="@id/accountBalance"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/accountPhone"
           android:textColor="@color/white"
           style="@style/text_nor"
           android:layout_marginTop="@dimen/middle_top_distance"
           android:layout_marginStart="@dimen/left_distance"
           android:layout_marginLeft="@dimen/left_distance"
           android:paddingBottom="@dimen/margin_bottom"
           android:text="@string/account_balance_detail"/>
       <TextView
           android:id="@id/itemMoneySymbol"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginStart="@dimen/left_distance"
           android:layout_marginLeft="@dimen/left_distance"
           android:textColor="@color/white"
           android:layout_alignBottom="@id/accountMoney"
           style="@style/text_nor"
           android:text="@string/discount_coupon_money" />
       <TextView
           android:id="@id/accountMoney"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/white"
           style="@style/text_large"
           android:paddingTop="@dimen/padding_top"
           android:layout_below="@id/accountBalance"
           android:layout_toRightOf="@id/itemMoneySymbol"
           android:layout_toEndOf="@id/itemMoneySymbol"
           android:text="@string/withdraw_account_money"/>
       <Button
           android:id="@id/withdraw"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentEnd="true"
           android:layout_alignParentRight="true"
           android:layout_alignTop="@id/accountBalance"
           android:text="@string/withdraw"
           style="@style/text_nor"
           android:textColor="@color/white"
           android:layout_marginEnd="@dimen/right_distance"
           android:layout_marginRight="@dimen/right_distance"
           android:background="@drawable/button_white_orange"/>

   </RelativeLayout>
    <ListView
        android:id="@id/listWithdraw"
        android:layout_marginTop="@dimen/middle_top_distance"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>