<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/register_title"/>
    <include layout="@layout/register_three_step"/>
    <EditText
        android:id="@id/etInputPhone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_distance"
        android:hint="@string/hint_input_password_register"
        style="@style/text_nor"
        android:layout_marginTop="25dp"
        android:paddingLeft="@dimen/padding_distance"
        android:paddingStart="@dimen/padding_distance"
        android:paddingEnd="@dimen/padding_distance"
        android:paddingRight="@dimen/padding_distance"
        android:inputType="phone"
        android:background="@drawable/edit_no_input"/>
    <Button
        android:id="@id/getVerification"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_margin="@dimen/margin_button_distance"
        android:text="@string/getVerification"
        android:textColor="@color/white"
        style="@style/text_nor"
        android:background="@drawable/button_gray" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/left_distance"
        android:layout_marginLeft="@dimen/left_distance"
        android:orientation="horizontal">
    <CheckBox
        android:id="@id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_nor"
            android:textColor="@color/gray"
            android:text="@string/Agreeable"/>
        <TextView
            android:id="@id/userContract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_nor"
            android:textColor="@color/colorPrimaryDark"
            android:text="@string/user_contract"/>
    </LinearLayout>
</LinearLayout>