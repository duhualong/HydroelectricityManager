<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/gray_light"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@drawable/color_gradient_theme">
        <ImageView
            android:id="@id/backLeftWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_arrow_left_white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forget_pwd"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            style="@style/text_big"
            android:layout_toEndOf="@id/backLeftWhite"
            android:layout_toRightOf="@id/backLeftWhite"/>
    </RelativeLayout>


        <EditText
            android:id="@id/inputPhoneNumber"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/small_top_distance"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/white"
            android:paddingLeft="@dimen/left_distance"
            android:paddingStart="@dimen/left_distance"
            android:paddingRight="@dimen/zero"
            android:paddingEnd="@dimen/zero"
            style="@style/text_nor"
            android:hint="@string/et_hint_input_phone_number"
            android:inputType="phone"
            android:maxLength="11"/>

    <View
        style="@style/divider"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/white">

        <EditText
            android:id="@id/inputVar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:paddingLeft="@dimen/left_distance"
            android:paddingStart="@dimen/left_distance"
            android:paddingRight="@dimen/zero"
            android:paddingEnd="@dimen/zero"
            style="@style/text_nor"
            android:layout_centerVertical="true"
            android:hint="@string/hint_verification"/>
        <Button
            android:id="@id/btnVar"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/liner_layout_height_large"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/right_distance"
            android:layout_marginRight="@dimen/right_distance"
            android:text="@string/get_verification"
            style="@style/text_small"
            android:textColor="@color/white"
            android:background="@drawable/button_gray"
            android:layout_height="@dimen/button_height" />
    </RelativeLayout>
    <Button
        android:id="@id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_margin="@dimen/margin_button_distance"
        android:text="@string/next"
        android:clickable="false"
        android:textColor="@color/white"
        style="@style/text_nor"
        android:background="@drawable/button_gray"/>

    </LinearLayout>

</RelativeLayout>