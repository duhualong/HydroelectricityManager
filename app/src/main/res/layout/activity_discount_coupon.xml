<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:actionBarSize"
        android:background="@drawable/color_gradient_theme">
        <ImageView
            android:id="@id/backLeftWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_arrow_left_white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/discount_coupon"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            style="@style/text_big"
            android:layout_toEndOf="@id/backLeftWhite"
            android:layout_toRightOf="@id/backLeftWhite"/>
        <TextView
            android:id="@id/addition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/addition"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            style="@style/text_big"
            android:padding="@dimen/text_padding"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@id/noCoupon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/liner_layout_height"
        android:layout_margin="@dimen/margin_distance"
        android:background="@drawable/ic_discount_coupon_background"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            style="@style/text_nor"
            android:text="@string/no_coupon"/>
        </RelativeLayout>
    <LinearLayout
        android:id="@id/tipCoupon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_edit_text"
        android:background="@color/white"
        android:visibility="gone"
        android:gravity="center"
       >
    <TextView
        android:id="@id/discountState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/tip"
        android:drawableStart="@drawable/tip"
        android:drawablePadding="@dimen/padding_drawable"
        android:padding="@dimen/text_padding"
        android:text="@string/discount_coupon_use_state"/>

    </LinearLayout>
    <ListView
        android:visibility="gone"
        android:id="@id/listDiscountCoupon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>