<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout
        android:id="@id/titleRequirement"
        android:layout_width="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@drawable/color_gradient_theme">
        <ImageView
            android:id="@id/backLeftWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_arrow_left_white"/>
        <TextView
            android:id="@id/maintenanceProjects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_maintain_project"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            style="@style/text_big"
            android:layout_toEndOf="@id/backLeftWhite"
            android:layout_toRightOf="@id/backLeftWhite"/>
        <ImageView
            android:id="@id/telephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_telephone"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:padding="@dimen/padding_drawable"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
