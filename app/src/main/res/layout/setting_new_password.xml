<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/gray_light"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@drawable/color_gradient_theme">
        <ImageView
            android:id="@id/backLeftWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/ic_arrow_left_white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/refresh_setting_pwd"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            style="@style/text_big"
            android:layout_toEndOf="@id/backLeftWhite"
            android:layout_toRightOf="@id/backLeftWhite"/>
    </RelativeLayout>

        <EditText
            android:id="@id/inputPwd"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/small_top_distance"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/white"
            android:paddingLeft="@dimen/left_distance"
            android:paddingStart="@dimen/left_distance"
            android:paddingRight="@dimen/zero"
            android:paddingEnd="@dimen/zero"
            style="@style/text_nor"
            android:inputType="textPassword"
            android:hint="@string/et_hint_input_password" />

    <View
        style="@style/divider"/>

        <EditText
            android:id="@id/reInputPwd"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/white"
            android:paddingLeft="@dimen/left_distance"
            android:paddingStart="@dimen/left_distance"
            android:paddingRight="@dimen/zero"
            android:paddingEnd="@dimen/zero"
            style="@style/text_nor"
            android:inputType="textPassword"
            android:hint="@string/setting_pwd"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/tip"
            android:drawableStart="@drawable/tip"
            android:layout_marginTop="@dimen/middle_top_distance"
            android:layout_marginLeft="@dimen/middle_left_distance"
            android:layout_marginStart="@dimen/middle_left_distance"
            android:drawablePadding="@dimen/padding_drawable"
            android:text="@string/password_length"/>
    <Button
        android:id="@id/btnCertain"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_margin="@dimen/margin_button_distance"
        android:text="@string/certain"
        android:textColor="@color/white"
        style="@style/text_nor"
        android:background="@drawable/button_orange"/>

    </LinearLayout>

</RelativeLayout>