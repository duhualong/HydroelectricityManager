<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_middle"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginTop="@dimen/small_top_distance"
        android:layout_height="@dimen/my_content_height">
        <TextView
            android:id="@id/contacts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/padding_drawable"
            android:text="@string/contacts"
            style="@style/text_nor"
            android:layout_marginStart="@dimen/middle_left_distance"
            android:layout_marginLeft="@dimen/middle_left_distance" />
       <EditText
           android:id="@id/editContacts"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_toRightOf="@id/contacts"
           android:inputType="text"
           android:hint="@string/hint_contacts"
           style="@style/text_nor"
           android:background="@null"
           android:padding="@dimen/text_padding_middle"
           android:layout_centerVertical="true"
           android:layout_toEndOf="@id/contacts"/>

    </RelativeLayout>
    <View style="@style/divider"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/my_content_height">
        <TextView
            android:id="@id/phoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/padding_drawable"
            android:text="@string/phone_number"
            style="@style/text_nor"
            android:layout_marginStart="@dimen/middle_left_distance"
            android:layout_marginLeft="@dimen/middle_left_distance" />
        <EditText
            android:id="@id/editPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/phoneNumber"
            android:inputType="phone"
            android:hint="@string/hint_receiver_delivery_phone"
            style="@style/text_nor"
            android:background="@null"
            android:padding="@dimen/text_padding_middle"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/phoneNumber"/>

    </RelativeLayout>
    <View style="@style/divider"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="@dimen/my_content_height">
        <TextView
            android:id="@id/selectTown"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/padding_drawable"
            android:text="@string/select_town"
            style="@style/text_nor"
            android:layout_marginStart="@dimen/middle_left_distance"
            android:layout_marginLeft="@dimen/middle_left_distance" />
        <EditText
            android:id="@id/editSelectTown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/selectTown"
            android:inputType="text"
            android:hint="@string/hint_select_town"
            style="@style/text_nor"
            android:background="@null"
            android:padding="@dimen/text_padding_middle"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/selectTown"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/right_distance"
            android:layout_marginRight="@dimen/right_distance"
            android:src="@drawable/ic_black_right"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginTop="@dimen/small_top_distance"
        android:layout_height="@dimen/my_content_height">
        <TextView
            android:id="@id/detailAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/padding_drawable"
            android:text="@string/detail_address"
            style="@style/text_nor"
            android:layout_marginStart="@dimen/middle_left_distance"
            android:layout_marginLeft="@dimen/middle_left_distance" />
        <EditText
            android:id="@id/editDetailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/detailAddress"
            android:inputType="text"
            android:hint="@string/hint_detail_address"
            style="@style/text_nor"
            android:background="@null"
            android:padding="@dimen/text_padding_middle"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/detailAddress"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/small_top_distance">
        <CheckBox
            android:id="@id/checkBoxAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:checked="true"
            android:layout_centerVertical="true"
            android:drawablePadding="@dimen/padding_drawable"
            android:layout_marginStart="@dimen/middle_left_distance"
            android:layout_marginLeft="@dimen/middle_left_distance" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/checkBoxAddress"
            style="@style/text_nor"
            android:text="@string/setting_default_address"
            android:padding="@dimen/text_padding"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/checkBoxAddress"/>
    </RelativeLayout>
</LinearLayout>